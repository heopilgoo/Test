{{> layouts/header}}

<div class="container mt-4">
    <h2 class="text-center mb-4">게시글 목록</h2>
    <a href="/posts/new" class="btn btn-primary mb-3">새 게시글 작성</a>

    <!-- 축구팀 버튼 추가 -->
    <a href="/teams" class="btn btn-success mb-3">축구팀</a> <!-- "축구팀" 버튼 추가 -->

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>작성일</th>
            <th>조회수</th>
            <th>작업</th> <!-- 작업 열 추가 -->
        </tr>
        </thead>
        <tbody>
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{createdAt}}</td>
                <td>{{views}}</td>
                <td>
                    <a href="/posts/{{id}}/edit" class="btn btn-warning btn-sm">수정</a>
                    <form action="/posts/{{id}}/delete" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">삭제</button>
                    </form>
                </td>
            </tr>
        {{/posts}}
        </tbody>
    </table>

    <!-- 페이지네이션 -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- 이전 페이지 링크 -->
            {{#prevPage}}
                <li class="page-item">
                    <a class="page-link" href="/posts?page={{prevPage}}">이전</a>
                </li>
            {{/prevPage}}

            <!-- 현재 페이지 -->
            <li class="page-item active">
                <span class="page-link">{{currentPage}}</span>
            </li>

            <!-- 다음 페이지 링크 -->
            {{#nextPage}}
                <li class="page-item">
                    <a class="page-link" href="/posts?page={{nextPage}}">다음</a>
                </li>
            {{/nextPage}}
        </ul>
    </nav>

</div>

{{> layouts/footer}}
